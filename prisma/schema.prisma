generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id() @unique @default(uuid())
  name      String?
  userId    Int
  createdAt DateTime

  createdCampaign Campaign[] @relation("CreatedCampaign")
  joinedCampaign  Campaign[] @relation("JoinedCampaign")
}

model Guild {
  id       String   @id() @unique @default(uuid())
  name     String?
  guildId  Int      @unique
  joinedAt DateTime
  leavedAt DateTime

  createdCampaign Campaign? @relation("GuildCreatedCampaign")
}

model Campaign {
  id String @id() @unique @default(uuid())

  user    User   @relation("CreatedCampaign", fields: [userId], references: [id])
  userId  String
  guild   Guild  @relation("GuildCreatedCampaign", fields: [guildId], references: [guildId])
  guildId Int    @unique

  saveId String 

  User User[] @relation("JoinedCampaign")
}
